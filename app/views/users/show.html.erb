<h2>Profile page</h2>

<%= render partial: 'shared/form_errors', locals: { record: @user } %>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, disabled: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br/>
    <%= f.text_field :name, autocomplete: "name", required: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :password %><br/>
    <%= f.password_field :password, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
  </div>
  
  <%= f.submit "Submit", class: 'btn btn-light' %>
<% end %>