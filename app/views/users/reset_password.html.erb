<h2>Reset Password</h2>

<%= form_for @user, url: update_password_users_path(token: @token), method: :post do |f| %>
<% if @user.errors.any? %>
  <strong>You failed submission:</strong>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li style="color:red"><%= msg %></li>
  <% end %>
  </ul>
<% end %>

  <div>
    <%= label_tag :email %><br/>
    <%= email_field_tag :email, @user.email, disabled: true %>
  </div>
  
  <div>
    <%= f.label :password %><br/>
    <%= f.password_field :password, autofocus: true, required: true %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, required: true %>
  </div>
  
  <%= submit_tag "Submit" %>
<% end %>