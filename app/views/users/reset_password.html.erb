<h2>Reset Password</h2>

<%= render partial: 'shared/form_errors', locals: { record: @user } %>

<%= form_for @user, url: update_password_users_path(token: @token), method: :post do |f| %>

  <div class="form-group">
    <%= label_tag :email %><br/>
    <%= email_field_tag :email, @user.email, disabled: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :password %><br/>
    <%= f.password_field :password, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
  </div>
  
  <%= submit_tag "Submit", class: 'btn btn-light' %>
<% end %>