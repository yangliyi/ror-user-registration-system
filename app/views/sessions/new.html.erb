<h2>Log In</h2>

<%= form_tag sessions_path do |f| %>
  <div class="form-group">
    <%= label_tag :email %><br/>
    <%= email_field_tag :email, nil, autofocus: true, required: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :password %><br/>
    <%= password_field_tag :password, nil, required: true, class: 'form-control' %>
  </div>
  
  <%= submit_tag "Submit", class: 'btn btn-light' %>
<% end %>

<%= link_to 'Forgot password', forgot_password_users_path %>