<h2>Log In</h2>

<%= form_tag sessions_path do |f| %>
  <div>
    <%= label_tag :email %><br/>
    <%= email_field_tag :email, nil, autofocus: true, autocomplete: "email", required: true %>
  </div>
  
  <div>
    <%= label_tag :password %><br/>
    <%= password_field_tag :password, nil, required: true %>
  </div>
  
  <%= submit_tag "Submit" %>
<% end %>

<%= link_to 'Forgot password', forgot_password_users_path %>